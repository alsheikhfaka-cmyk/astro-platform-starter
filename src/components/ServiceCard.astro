---
interface Props {
    title: string;
    description: string;
    icon: string;
    href: string;
}

const { title, description, icon, href } = Astro.props;
---

<a href={href} class="card block p-6 no-underline group">
    <div class="text-4xl mb-4">{icon}</div>
    <h3 class="text-lg font-bold mb-2 group-hover:text-primary transition-colors" style="color: var(--color-primary);">
        {title}
    </h3>
    <p class="text-sm leading-relaxed" style="color: var(--color-text-light);">
        {description}
    </p>
    <div class="mt-4 text-sm font-semibold flex items-center gap-1" style="color: var(--color-accent);">
        <span>المزيد</span>
        <span>←</span>
    </div>
</a>
